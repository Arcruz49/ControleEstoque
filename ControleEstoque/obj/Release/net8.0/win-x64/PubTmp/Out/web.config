    </security>
    <aspNetCore processPath=".\ControleEstoque.exe" arguments=".\ControleEstoque.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="InProcess" />
  </system.webServer>
</configuration>
