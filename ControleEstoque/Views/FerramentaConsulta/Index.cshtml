<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editor SQL</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
            color: #333;
        }

        

        h1 {
            color: #2c3e50;
            margin-top: 0;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

        .toolbar {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            justify-content: flex-end;
        }

        button {
            padding: 8px 16px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.2s;
        }

        button:hover {
            background-color: #2980b9;
        }

        .sql-editor {
            margin-bottom: 30px;
        }

        textarea {
            width: 100%;
            min-height: 150px;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-family: 'Consolas', 'Monaco', monospace;
            font-size: 14px;
            resize: vertical;
        }

        .parameters {
            margin-bottom: 20px;
        }

        .parameters-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        input {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 100%;
            box-sizing: border-box;
        }

        .add-param-btn {
            background-color: #27ae60;
        }

        .add-param-btn:hover {
            background-color: #219653;
        }

        .execute-btn {
            background-color: #27ae60;
        }

        .execute-btn:hover {
            background-color: #219653;
        }

        .clear-btn {
            background-color: #e74c3c;
        }

        .clear-btn:hover {
            background-color: #c0392b;
        }

        .remove-btn{
            background-color: #e74c3c;
        }

            .remove-btn:hover {
            background-color: #c0392b;
        }

        .results {
            margin-top: 30px;
        }

        .fa-solid{
            margin:2px;
        }

        .results-placeholder {
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px dashed #ddd;
            border-radius: 4px;
            text-align: center;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Editor de Consultas SQL</h2>

        <div class="toolbar">
            <button class="execute-btn" onclick="ExecutarSql()">Executar <i class="fa-solid fa-play"></i> </button>
            <button class="clear-btn" onclick="LimpaConsulta()">Limpar <i class="fa-solid fa-xmark"></i></button>
        </div>

        <div class="sql-editor">
            <textarea placeholder="Digite sua consulta SQL aqui..."></textarea>
        </div>

        <div class="parameters">
            <div class="parameters-header">
                <h2>Parâmetros</h2>
                <button class="add-param-btn" onclick="AdicionarParametro()">Adicionar Parâmetro</button>
            </div>

            <table id="tableParametros">
                <thead>
                    <tr>
                        <th>Nome do Parâmetro</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    
                    
                    
                </tbody>
            </table>
        </div>

        <div class="results">
            <h2>Resultados</h2>
            <div class="results-placeholder">
                <div id="tabela-container" style="max-height: 400px; overflow: auto;">
                </div>
            </div>
        </div>
    </div>

<script>
        
        
        function LimpaConsulta(){
            Swal.fire({
                title: "Deseja mesmo limpar a consulta?",
                text: "Você perderá qualquer alteração não salva!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Limpar",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $(".sql-editor textarea").val("");

                }
            });
        }


        function ExecutarSql(){
            debugger
            let query = $(".sql-editor textarea").val();
            let parametros = [];
            
            $("#tableParametros tbody tr").each(function () {
                let nomeParametro = $(this).find("td:eq(0) input").val(); 
                let valorParametro = $(this).find("td:eq(1) input").val(); 
                let tipo = $(this).find("td:eq(2) select").val();

                parametros.push({
                    nome: nomeParametro,
                    valor: valorParametro,
                    tipo : tipo
                });
            });
            
            
            $.ajax({
                url: '/FerramentaConsulta/ExecutarBusca',
                type: 'POST', 
                contentType: 'application/json', 
                data: JSON.stringify({ 
                    query: query,
                    parametros: parametros
                }),
                success: function (data) {
                    if (data.success != true) {
                        Swal.fire({
                            title: "Erro",
                            text: data.message,
                            icon: "error"
                        });
                    } else {
                        const dados = data.dados;

                        if (!dados || dados.length === 0) {
                            $(".results-placeholder").html("Nenhum resultado encontrado.");
                            return;
                        }

                        let table = "<table style='overflow-x: auto; display: block; white-space: nowrap; overflow-y: auto ' class='table table-bordered table-striped'>";

                        table += "<thead><tr>";
                        for (let key in dados[0]) {
                            table += `<th>${key}</th>`;
                        }
                        table += "</tr></thead>";

                        table += "<tbody>";
                        for (let i = 0; i < dados.length; i++) {
                            table += "<tr>";
                            for (let key in dados[i]) {
                                table += `<td>${dados[i][key]}</td>`;
                            }
                            table += "</tr>";
                        }
                        table += "</tbody></table>";

                        $(".results-placeholder").html(table);
                    }
                },
                error: function () {
                    console.log("Erro ao carregar resultado");
                }
            });
        }

        function AdicionarParametro() {
            const novaLinha = `
                <tr>
                    <td><input type="text" ></td>
                    <td><input type="text" ></td>
                    <td>
                        <select class="form-select">
                            <option value="int">int</option>
                            <option value="bool">bool</option>
                            <option value="varchar">varchar</option>
                            <option value="decimal">decimal</option>
                            <option value="date">date</option>
                            <option value="datetime">datetime</option>
                        </select>
                    </td>
                    <td><button onclick="RemoverLinha(this)" class="remove-btn"><i class="fa-solid fa-trash-can"></i></button></td>
                </tr>
            `;

            $("#tableParametros tbody").append(novaLinha);
        }


        function RemoverLinha(button) {
            $(button).closest("tr").remove();
        }


        
</script>



</body>
</html>


